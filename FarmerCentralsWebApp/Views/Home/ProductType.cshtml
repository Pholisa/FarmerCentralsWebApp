@model FarmerCentralsWebApp.Models.tblProductType

@{
    ViewBag.Title = "ProductType";
}

<h2 style="color:white">Product Type</h2>

<style>
    body {
        background-image: url('/Images/thomas-gamstaetter-IFGVE61AAno-unsplash.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>tblProductType</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div style="color:white" class="form-group">
            @Html.LabelFor(model => model.typeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="color:white" class="form-group">
            @Html.LabelFor(model => model.quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}



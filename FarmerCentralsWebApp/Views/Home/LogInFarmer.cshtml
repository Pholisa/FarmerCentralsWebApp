@model FarmerCentralsWebApp.Models.tblFarmer

@{
    ViewBag.Title = "LogInFarmer";
}

<h2 style="color:black">LogIn Farmer</h2>

<style>
    body {
        background-image: url('/Images/daniel-klein-Ujcwgj1xdbA-unsplash.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>tblFarmer</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div style="color:black" class="form-group">
            @Html.LabelFor(model => model.farmerName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.farmerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.farmerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="color:black" class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LogIn" class="btn btn-default" />
            </div>
        </div>
    </div>
}

